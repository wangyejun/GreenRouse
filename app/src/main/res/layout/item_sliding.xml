<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@drawable/backdrop"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_head_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@mipmap/show" />

    <TextView
        android:id="@+id/tv_head_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="昵称"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@mipmap/sqear"
        android:text="公益捐款"
        android:id="@+id/btn_donation"
        android:textColor="#acacac" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@mipmap/sqear"
        android:text="我的兑换"
        android:id="@+id/btn_my_exchange"
        android:textColor="#acacac" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@mipmap/sqear"
        android:text="我的行走"
        android:id="@+id/btn_my_work"
        android:textColor="#acacac" />

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <TextView
           android:layout_alignParentBottom="true"
           android:layout_marginBottom="50dp"
           android:layout_marginLeft="30dp"
           android:layout_marginRight="30dp"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:background="@drawable/rect_gray"
           android:alpha="0.5"
           android:text="版本号"
           android:id="@+id/tv_versionName"
           android:textColor="#ffffff"
           android:gravity="center"/>
   </RelativeLayout>

</LinearLayout>