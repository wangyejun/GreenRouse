<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/maininterface"
    tools:context="com.example.niit.greenrouse.Fragment.HomeFragment">


    <ImageView
        android:id="@+id/img_water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:srcCompat="@mipmap/water"
        android:layout_marginTop="72dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/img_sun" />

    <ImageView
        android:id="@+id/img_sun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/sun"
        android:layout_alignTop="@+id/img_water"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
