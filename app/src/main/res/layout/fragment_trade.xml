<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.niit.greenrouse.MainActivity"
    android:orientation="vertical"
    android:background="@mipmap/backdrop">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetRight="10dp"
        android:id="@+id/toolbar2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="换 吧"
            android:textSize="25sp"
            android:textColor="#fff"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/share"
            android:layout_gravity="right"/>
    </android.support.v7.widget.Toolbar>


    <ImageView
        android:id="@+id/img_mobai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:srcCompat="@mipmap/bike"
        android:layout_below="@+id/toolbar2"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/img_didi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/taxi"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/img_mobai"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/img_meituan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        app:srcCompat="@mipmap/buy"
        android:layout_below="@+id/img_didi"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_mobai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:text="摩拜单车骑行时间"
        android:textSize="25dp"
        android:layout_above="@+id/img_didi"
        android:layout_alignEnd="@+id/img_mobai"
        android:layout_marginEnd="31dp" />

    <TextView
        android:id="@+id/tv_didi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="滴滴出行折扣券"
        android:textSize="25dp"
        android:layout_marginBottom="37dp"
        android:layout_above="@+id/img_meituan"
        android:layout_alignStart="@+id/tv_mobai" />

    <TextView
        android:id="@+id/tv_meituan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:text="美团商家抵用券"
        android:textSize="25dp"
        android:layout_alignBottom="@+id/img_meituan"
        android:layout_alignStart="@+id/tv_didi" />
</RelativeLayout>

